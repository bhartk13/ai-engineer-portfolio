    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/notebooks/multi_agent_capstone_framework",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Python Debugger: Streamlit (MCP Financial)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app/ui/chat_streamlit.py",
                "--server.headless=true"
            ],
            "cwd": "${workspaceFolder}/mcp/mcp-financial-assistant",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "STREAMLIT_DEBUG": "true"
            }
        }
    ]
}